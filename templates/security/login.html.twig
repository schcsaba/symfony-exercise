{% extends 'base.html.twig' %}

{% block title %}{{ 'account.login.cta'|trans }}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{ 'account.loggedinas'|trans }} {{ app.user.userIdentifier }}, <a
                        href="{{ path('app_logout') }}">{{ 'account.logout'|trans }}</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'account.signin.cta'|trans }}</h1>
        <div class="mb-3">
            <label for="inputUsername" class="form-label">{{ 'account.username'|trans }}</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                   autocomplete="username" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">{{ 'account.password'|trans }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'account.signin'|trans }}
        </button>
    </form>
{% endblock %}
